<% resource.actions.each do |action| %>
  <% case action[:name] %>
  <% when :view %>
    <%= link_to 'View', polymorphic_path([:admin, item]), class: "text-blue-600 hover:text-blue-900 mr-2" %>
  <% when :edit %>
    <%= link_to 'Edit', edit_polymorphic_path([:admin, item]), class: "text-green-600 hover:text-green-900 mr-2" %>
  <% when :delete %>
    <%= link_to 'Delete', polymorphic_path([:admin, item]), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
  <% end %>
<% end %>