<div class="relative flex flex-wrap items-end w-full dark:text-white">
  <%= link_to article_path(post), class: "w-full" do %>
    <%= image_tag(post.cover_url(:large),
      class: "inset-0 block object-cover object-center w-full h-72 grayscale filter"
    ) %>
  <% end %>

  <div class="items-end w-full mt-4 text-left">
    <%= link_to article_path(post) do %>
      <h2 class="truncate mb-2 font-serif text-xl font-semibold text-black dark:text-white lg:text-2xl">
        <%= post.title %>
      </h2>
    <% end %>

    <strong class="text-xs font-bold leading-relaxed tracking-widest uppercase">
      <%= t("articles.by") %> <%= post.user.username %> Â· <%= l post.created_at, format: :long_with_day %>.
    </strong>

    <p class="mt-4 text-sm tracking-wide text-ellipsis overflow-hidden h-10">
      <%= post.excerpt %>
    </p>

    <%= link_to article_path(post), class: "inline-flex items-center py-4 mt-3 text-xs font-bold tracking-widest text-black uppercase transition duration-500 ease-in-out transform border-b-2 border-black dark:border-white dark:text-white hover:text-gray-600 hover:border-gray-600" do %>
      <%= t("articles.read_now") %>
      <svg
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        class="w-4 h-4 ml-2"
        viewBox="0 0 24 24"
      >
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    <% end %>
  </div>
</div>