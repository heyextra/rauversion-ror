<div>
  <div class="border-muted border-t border-b flex items-center">
    <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 dark:text-gray-100 sm:text-4xl py-4">
      Reviews
    </h2>
  </div>

  <div class="flex lg:flex-row flex-col space-x-2">
    <% categories_section(category_slug).each do |post| %>
      <div class="w-full px-2 mt-12 md:w-1/2 lg:w-1/4">
        <%= render "article_block", post: post %>
      </div>
    <% end %>
  </div>
</div>