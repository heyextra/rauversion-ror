<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </head>

  <body>


    <div class="relative isolate flex min-h-svh w-full bg-white max-lg:flex-col lg:bg-zinc-100 dark:bg-zinc-900 dark:lg:bg-zinc-950">
      
      <%= render "backstage/shared/main_header" %>

      <main class="flex flex-1 flex-col pb-2 lg:min-w-0 lg:pl-64 lg:pr-2 lg:pt-2">
        <div class="h-[calc(100vh-16px)] overflow-auto grow p-6 lg:rounded-lg lg:bg-white lg:p-10 lg:shadow-sm lg:ring-1 lg:ring-zinc-950/5 dark:lg:bg-zinc-900 dark:lg:ring-white/10">
          <div class="mx-auto max-w-6xl">
            <%= yield %>


            <div class="flash">
              <%= render "backstage/shared/flash" %>
            </div>

            <%= render "backstage/shared/turbo_delete_modal" %>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>





